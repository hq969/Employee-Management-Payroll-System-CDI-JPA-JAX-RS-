<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="employeePU" transaction-type="JTA">
        <!-- Default datasource provided by the app server -->
        <jta-data-source>java:comp/DefaultDataSource</jta-data-source>

        <properties>
            <!-- H2 in-memory database configuration (for dev/demo) -->
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:employee;DB_CLOSE_DELAY=-1"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- Auto create schema at startup -->
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>

            <!-- Show SQL in logs -->
            <property name="jakarta.persistence.jdbc.show_sql" value="true"/>
            <property name="jakarta.persistence.jdbc.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
